<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.gmartin.activities.PersonActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/lvlName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lvlName"
            tools:text="@string/lvlName"
            android:labelFor="@+id/txtName" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.23"
            android:ems="10" />

        <TextView
            android:id="@+id/lvlLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lvlLastName"
            tools:text="@string/lvlLastName"
            android:labelFor="@+id/txtLastName"/>

        <EditText
            android:id="@+id/txtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.23"
            android:ems="10"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/lvlEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lvlEmail"
            tools:text="@string/lvlEmail"
            android:labelFor="@+id/txtEmail"/>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnOk" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnCancel" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
